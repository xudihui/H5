.input-wrap input{width:7em;}
.input-wrap.flex{padding:5px;}
view.flex{
	display:flex; 
	position:relative;
	overflow:hidden
}
view.flex.first::after{
  content: '';
  position: absolute;
  left: 0;
  bottom: 0px;
  right: auto;
  top: auto;
  height: 1px;
  width: 100%;
  background-color: #ccc;
  display: block;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
view.border{
	margin:20rpx 0;
	background:#fff;
	position:relative
}
view.border::before{
  content: '';
  position: absolute;
  left: 0;
  top: -1px;
  right: auto;
  bottom: auto;
  height: 1px;
  width: 100%;
  background-color: #ccc;
  display: block;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
view.border::after{
  content: '';
  position: absolute;
  left: 0;
  bottom: -1px;
  right: auto;
  top: auto;
  height: 1px;
  width: 100%;
  background-color: #ccc;
  display: block;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
